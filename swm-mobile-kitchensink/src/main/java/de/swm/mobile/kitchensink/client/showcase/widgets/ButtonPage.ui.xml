<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:m="urn:import:de.swm.commons.mobile.client.widgets">
	<ui:style>
		.modify > div > div {
			-webkit-box-flex: 1;
			margin: 0 .5em 0 .5em;
			-ms-flex: 1;
		}
	</ui:style>
	
	<ui:with field='icon' type='de.swm.mobile.kitchensink.client.theme.bootstrap.icon.IconResources'/>
	
	<g:HTMLPanel>
		<m:SimpleHeaderPanel ui:field="header" leftButton="Back">
			<g:Label>Button</g:Label>			
		</m:SimpleHeaderPanel>
		<m:ScrollPanel>
			<m:ListPanel selectable="false" secondaryStyle="{style.modify}">
				<m:ListItem>
					<m:Button ui:field="ok1">OK</m:Button>
				</m:ListItem>
				<m:ListItem>
					<m:Button ui:field="ok2">OK</m:Button>
					<m:Button ui:field="cancel2">Cancel</m:Button>
				</m:ListItem>
				<m:ListItem>
					<m:Button ui:field="yes3">Yes</m:Button>
					<m:Button ui:field="no3">No</m:Button>
					<m:Button ui:field="cancel3">Cancel</m:Button>
				</m:ListItem>
				<m:ListItem>
					<m:SimpleImageButton ui:field="img" normalIcon='{icon.information}' headerText="Image Button Test" />
				</m:ListItem>
                <m:ListItem>
                    <m:BigButton text="Big Button" />
                </m:ListItem>
			</m:ListPanel>			
		</m:ScrollPanel>
	</g:HTMLPanel>	
</ui:UiBinder> 