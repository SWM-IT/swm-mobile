<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui"
             xmlns:m="urn:import:de.swm.commons.mobile.client.widgets"
             xmlns:mt="urn:import:de.swm.commons.mobile.client.widgets.tab">
    <ui:style>
    </ui:style>
    <g:HTMLPanel>
        <m:HeaderPanel ui:field="header" leftButton="Back">
            <m:OnlyDesktopLabel>Tab Panel</m:OnlyDesktopLabel>
        </m:HeaderPanel>
        <mt:TabPanel ui:field="tab">
            <mt:Tab>
                <mt:TabHeader>
                    <g:Label>Tab1</g:Label>
                </mt:TabHeader>
                <mt:TabContent>
                    <g:HTMLPanel styleName="Tab-Content">
                        <g:Label>Tab1 Content</g:Label>
                    </g:HTMLPanel>
                </mt:TabContent>
            </mt:Tab>
            <mt:Tab>
                <mt:TabHeader>
                    <g:Label>Tab2</g:Label>
                </mt:TabHeader>
                <mt:TabContent>
                    <g:HTMLPanel styleName="Tab-Content">
                        <g:Label>Tab2 Content</g:Label>
                    </g:HTMLPanel>
                </mt:TabContent>
            </mt:Tab>
            <mt:Tab>
                <mt:TabHeader>
                    <g:Label>Tab3</g:Label>
                </mt:TabHeader>
                <mt:TabContent>
                    <g:HTMLPanel styleName="Tab-Content">
                        <g:Label>Tab3 Content</g:Label>
                    </g:HTMLPanel>
                </mt:TabContent>
            </mt:Tab>
        </mt:TabPanel>
    </g:HTMLPanel>
</ui:UiBinder> 